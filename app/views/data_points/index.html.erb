<turbo-frame id='data-points'>
  <p id="notice"><%= notice %></p>
  <table>
    <thead>
      <tr>
        <th>Name</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @data_points.each do |data_point| %>
        <tr>
          <td><%= data_point.dataset_id %></td>
          <td><%= data_point.name %></td>
          <td><%= button_to 'Destroy', [@app, @dataset, data_point], method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>
  <%= link_to 'New Data Point', new_app_dataset_data_point_path(@app, @dataset) %>
</turbo-frame>
