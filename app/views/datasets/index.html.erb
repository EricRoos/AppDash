<turbo-frame id='datasets'>
  <p id="notice"><%= notice %></p>
  <table class='table table-sm'>
    <thead>
      <tr>
        <th>App</th>
        <th>Name</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @datasets.each do |dataset| %>
        <tr>
          <td><%= dataset.app_id %></td>
          <td><%= dataset.name %></td>
          <td><%= link_to 'Show', [@app,dataset], data: { 'turbo-frame': "_top" } %></td>
          <td><%= link_to 'Edit', edit_app_dataset_path(@app, dataset), data: { 'turbo-frame': "_top" } %></td>
          <td><%= button_to 'Destroy', [@app, dataset], method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <div>
    <%= link_to 'New Dataset', new_app_dataset_path(@app) %>
  </div>
</turbo-frame>
